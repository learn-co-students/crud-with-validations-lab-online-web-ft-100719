<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><span><%= song.title %></span></td>
        <td><%= link_to "Delete", song, method: :delete, data: { confirm: "Really?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>